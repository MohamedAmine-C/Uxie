{
    "name":        "uxie/uxie",
    "description": "Uxie a light MVC Framework",
    "keywords":    ["framework", "uxie"],
    "type":        "framework",
    "license":     "MIT",

    "require": {
        "php":                         ">=7.0",
        "uxie/router":                 ">=0.3",
        "uxie/model":                  ">=0.2",
        "uxie/statistics":             ">=0.2",
        "uxie/request-handler":        ">=0.3",
        "uxie/validator":              ">=0.1",
        "uxie/middleware":             ">=0.1",
        "uxie/kernel":                 ">=0.2",
        "uxie/authenticator":          ">=0.2",
        "uxie/box":                    ">=0.1",
        "vlucas/phpdotenv":            ">=2.4",
        "mohamed-amine/file-uploader": ">=1.1",
        "mohamed-amine/ioc-container": ">=0.3",
        "intervention/image":          ">=2.4",
        "jenssegers/blade":            ">=1.1",
        "pug-php/pug":                 "^2.7.4",
        "phpunit/phpunit":             ">=6.0",
        "robmorgan/phinx":             ">= 0.9"
    },

    "authors": [
        {
            "name":     "M.Amine Cheribet",
            "email":    "MohamedAmine1c@gmail.com",
            "homepage": "https://github.com/MohamedAmine-C/Uxie",
            "role":     "Owner"
        }
    ],

    "autoload": {
        "files": [
            "App/helpers/helpers.php"
        ],
    "psr-4": {
      "App\\":              "App/",
      "ServiceProviders\\": "App/ServiceProviders/",
      "Middleware\\":       "Middlewares/",
      "Controller\\":       "Controllers/",
      "Model\\":            "Models/",
      "Web\\":              "web/"
    }
  },
  "scripts": {
    "post-install-cmd": "php -r \"copy('.env.example', '.env');\""
  }
}
