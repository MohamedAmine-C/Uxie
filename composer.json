{
    "name": "uxie/uxie",
    "description": "Uxie a light mvc Micro-Framework",
    "keywords": ["framework", "uxie"],
    "type": "framework",
    "license": "MIT",

    "require": {
        "php": ">=7.0",
        "uxie/router": "^0.1",
        "uxie/model": "^0.1",
        "uxie/statistics": "^0.1",
        "vlucas/phpdotenv": "^2.4",
        "mohamed-amine/file-uploader": "^1.1",
        "intervention/image": "^2.4",
        "jenssegers/blade": "^1.1",
        "phpunit/phpunit": "^6.0"
    },

    "authors": [
        {
            "name": "Mohamed Amine",
            "email": "MohamedAmine1c@gmail.com",
            "homepage": "https://github.com/MohamedAmine-C/Uxie",
            "role": "Owner"
        }
    ],

    "autoload": {
        "files": [
            "App/helpers/helpers.php"
        ],
    "psr-4": {
      "App\\":"App/",
      "Middleware\\":"Middleware/",
      "Controller\\":"Controllers/",
      "Model\\":"Models/",
      "Kernel\\":"Kernel/",
      "Web\\":"web/"
    }
  },
  "scripts": {
    "post-install-cmd": "php -r \"copy('.env.example', '.env');\""
  }
}
